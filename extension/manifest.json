{
  "name": "Terms and conditions simplifier.",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },

  "icons": {
    "128": "logo.png"
  },

  "permissions": ["activeTab", "tabs", "scripting"],
  "content_scripts": [
    {
      "matches": ["https://www.google.com"],
      "js": ["content.js"]
    }
  ]
}
